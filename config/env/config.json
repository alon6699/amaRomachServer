{
    "port": 3000,
    "db": {
        "url" : "mongodb://localhost:27017/shop",
        "options": {
            "useNewUrlParser": true, 
            "useUnifiedTopology": true, 
            "useFindAndModify": false,
            "serverSelectionTimeoutMS": 30000
        }
    },
    "logger": {
        "file": {
            "level": "info",
            "filename": "C://amaRomachLogs/app.log",
            "handleExceptions": true,
            "json": true,
            "maxsize": 5242880,
            "maxFiles": 5,
            "colorize": false
        },
        "console": {
            "level": "debug",
            "handleExceptions": true,
            "json": false,
            "colorize": true
        }
    }
}